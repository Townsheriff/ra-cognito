{
  "name": "ra-cognito",
  "version": "1.0.4",
  "description": "Authenticate a react admin CMS with cognito user pools.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "xo",
    "precommit": "lint-staged",
    "prepare": "npm run transpile",
    "release": "standard-version",
    "transpile": "babel src --out-dir dist --ignore **/*.test.js",
    "test": "jest"
  },
  "keywords": [
    "reactjs",
    "react",
    "react-admin",
    "aws",
    "authentication",
    "cognito"
  ],
  "files": [
    "dist"
  ],
  "author": "Ben Briggs <ben.briggs@thedistance.co.uk>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-transform-react-jsx": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@material-ui/core": "^4.7.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^3.1.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "prettier": "^1.19.1",
    "ra-core": "^3.0.4",
    "ra-ui-materialui": "^3.0.4",
    "ramda": "^0.26.1",
    "react": "^16.12.0",
    "standard-version": "^9.3.2",
    "xo": "^0.48.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "extends": [
      "prettier",
      "plugin:react/recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "**/*.css"
          ]
        }
      ],
      "import/no-named-as-default": "off",
      "unicorn/catch-error-name": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/filename-case": "off"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.js"
        ],
        "env": "browser"
      },
      {
        "files": [
          "**/*.test.js",
          "**/__mocks__/*.js"
        ],
        "env": "jest"
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "peerDependencies": {
    "@aws-amplify/auth": "^3.3.4",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "ra-core": "^3.0.4",
    "ra-ui-materialui": "^3.0.4",
    "ramda": "^0.26.1",
    "react": "^17.0.2",
    "react-admin": "^3.19.11",
    "react-dom": "^17.0.2",
    "react-final-form": "^6.5.1",
    "react-redux": "^7.2.1",
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "0.12"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-react-jsx"
    ]
  },
  "dependencies": {
    "classnames": "2.2.6"
  }
}
